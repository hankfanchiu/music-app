<% content_for(:session) do %>
  <%= render 'shared/session_bar' %>
<% end %>

<h1><%= @track.name %></h1>
<table>
  <tr>
    <td>
      Album:
    </td>
    <td>
      <%= @track.album.name %>
    </td>
  </tr>
  <tr>
    <td>
      Type:
    </td>
    <td>
      <%= @track.type %>
    </td>
  </tr>
  <tr>
    <td>
      Lyrics:
    </td>
    <td>
      <%= @track.lyrics %>
    </td>
  </tr>
</table>

<%= link_to "Add a track",
      new_track_url,
      method: :get %> |
<%= link_to "Edit",
      edit_track_url(@track),
      method: :get %> |
<%= link_to "Delete",
      track_url(@track),
      method: :delete,
      data: { confirm: "Are you sure you want to delete #{@track.name}?" } %>
